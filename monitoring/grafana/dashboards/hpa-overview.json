{
  "dashboard": {
    "id": null,
    "uid": "hpa-overview",
    "title": "HPA Platform Overview",
    "tags": ["hpa", "platform", "overview"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "gridPos": {"x": 0, "y": 0, "w": 8, "h": 6},
        "type": "stat",
        "title": "Backend Health",
        "targets": [
          {
            "expr": "up{job=\"backend\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"value": 0, "text": "DOWN", "color": "red"},
              {"value": 1, "text": "UP", "color": "green"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            },
            "color": {
              "mode": "thresholds"
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"x": 8, "y": 0, "w": 8, "h": 6},
        "type": "stat",
        "title": "Agent Status",
        "targets": [
          {
            "expr": "up{job=\"agent\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"value": 0, "text": "DISCONNECTED", "color": "red"},
              {"value": 1, "text": "CONNECTED", "color": "green"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            },
            "color": {
              "mode": "thresholds"
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"x": 16, "y": 0, "w": 8, "h": 6},
        "type": "stat",
        "title": "Active Clusters",
        "targets": [
          {
            "expr": "count(up{job=\"agent\"} == 1)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "green"}
              ]
            },
            "color": {
              "mode": "thresholds"
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"x": 0, "y": 6, "w": 12, "h": 8},
        "type": "graph",
        "title": "Request Rate",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"backend\"}[5m])",
            "legendFormat": "{{method}} {{path}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "show": true
          },
          {
            "show": false
          }
        ],
        "xaxis": {
          "show": true
        }
      },
      {
        "id": 5,
        "gridPos": {"x": 12, "y": 6, "w": 12, "h": 8},
        "type": "graph",
        "title": "Response Time",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"backend\"}[5m]))",
            "legendFormat": "p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"backend\"}[5m]))",
            "legendFormat": "p50",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "show": true
          },
          {
            "show": false
          }
        ],
        "xaxis": {
          "show": true
        }
      },
      {
        "id": 6,
        "gridPos": {"x": 0, "y": 14, "w": 12, "h": 8},
        "type": "graph",
        "title": "CPU Usage",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"backend\"}[5m])*100",
            "legendFormat": "Backend CPU",
            "refId": "A"
          },
          {
            "expr": "rate(process_cpu_seconds_total{job=\"agent\"}[5m])*100",
            "legendFormat": "Agent CPU",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "show": true
          },
          {
            "show": false
          }
        ],
        "xaxis": {
          "show": true
        }
      },
      {
        "id": 7,
        "gridPos": {"x": 12, "y": 14, "w": 12, "h": 8},
        "type": "graph",
        "title": "Memory Usage",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"backend\"}/1024/1024",
            "legendFormat": "Backend Memory",
            "refId": "A"
          },
          {
            "expr": "process_resident_memory_bytes{job=\"agent\"}/1024/1024",
            "legendFormat": "Agent Memory",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "MB",
            "show": true
          },
          {
            "show": false
          }
        ],
        "xaxis": {
          "show": true
        }
      },
      {
        "id": 8,
        "gridPos": {"x": 0, "y": 22, "w": 8, "h": 6},
        "type": "stat",
        "title": "Database Connections",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"hpa_db\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 80, "color": "red"}
              ]
            },
            "color": {
              "mode": "thresholds"
            }
          }
        }
      },
      {
        "id": 9,
        "gridPos": {"x": 8, "y": 22, "w": 8, "h": 6},
        "type": "stat",
        "title": "Redis Memory",
        "targets": [
          {
            "expr": "redis_memory_used_bytes/1024/1024",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "MB",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 256, "color": "yellow"},
                {"value": 400, "color": "red"}
              ]
            },
            "color": {
              "mode": "thresholds"
            }
          }
        }
      },
      {
        "id": 10,
        "gridPos": {"x": 16, "y": 22, "w": 8, "h": 6},
        "type": "stat",
        "title": "Error Rate",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"backend\",status=~\"5..\"}[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            },
            "color": {
              "mode": "thresholds"
            }
          }
        }
      }
    ]
  },
  "overwrite": true
}